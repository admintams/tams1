                }

                if (result.HH_Hrs != 0) {
                    $("#hhHrs").text(result.HH_Hrs);
                }

                if (result.RDSH_Hrs != 0) {
                    $("#rdshHrs").text(result.RDSH_Hrs);
                }
                
                if (result.RDRH_Hrs != 0) {
                    $("#rdrhHrs").text(result.RDRH_Hrs);
                }

                if (result.RDHH_Hrs != 0) {
                    $("#rdhhHrs").text(result.RDHH_Hrs);
                }

                if (result.Late != 0) {
                    $("#late").text(result.Late);
                }

                if (result.UT != 0) {
                    $("#ut").text(result.UT);
                }
                
                if (result.VL != 0) {
                    $("#vl").text(result.VL);
                }

                if (result.SL != 0) {
