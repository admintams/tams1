    function LoadTimeEntry() {
        var ctr = 0;
        var periodId = $("#periodId").val();
        var employeeId = $("#empId").val();

        $('#TimeEntriesContainer').jtable({
            title: '',
            //paging: true,
            pageSize: 10,
            //sorting: true,
            //defaultSorting: 'Ctr ASC',
            selecting: true,
            selectOnRowClick: true,
            actions: {
                listAction: '/Admin/Employee/GetTimeEntry/' + employeeId + "/" + periodId
            },
            fields: {
                Ctr: {
                    title: '#',
                    key: false,
                    create: false,
                    edit: false,
                    width: '2%',
                    visibility: 'fixed',
                    display: function (data) {
                        ctr = ctr + 1;
                        return ctr;
                    }
                },
                Day: {
                    title: 'Day',
                    width: '3%',
                    visibility: 'fixed',
                },
                Date: {
                    title: 'Date',
                    width: '5%',
                    visibility: 'fixed',
                    type: 'date',
                    displayFormat: 'yy-mm-dd'
                },
                DayType: {
                    title: 'Type',
                    width: '4%',
                    visibility: 'fixed',
                },
                ShiftCode: {
                    title: 'Shift',
                    width: '5%',
                    visibility: 'fixed',
                    display: function (data) {
                        return '<p style="display: inline-block;">' + data.record.ShiftCode + '</p> <a href="#"><span style="margin-left:8px;" class="pull-right"><i class="fa fa-edit"></i></span></a>'
                    }
