<style>
    .navbar {
        min-height: 0px;
        margin-bottom: 0px;
    }

    .second-nav a.nav-link {
        color: #444;
        font-size: 16px;
        font-weight: 600;
    }

    .second-nav a.dropdown-item {
        color: #fff;
        padding: 10px;
        text-decoration: none;
    }

        .second-nav a.dropdown-item i {
            margin-top: 3px;
            margin-right: 10px;
        }

        .second-nav a.dropdown-item:hover {
            background: red;
        }

    .second-nav .navbar-nav > li > .dropdown-menu {
        width: 100%;
        background: #1c1c1c;
    }

    li.nav-item:hover {
        background: #e5e5e5;
        border: 1px solid white;
    }

    div#navbarNavDropdown {
        position: absolute;
        width: 100%;
        padding-right: 0px;
        top: -90px;
    }

    li.nav-item {
        width: 274px;
        text-align: center;
        text-decoration: none !important;
        background-color: whitesmoke;
        height: 30px;
        list-style: none;
        border: 1px solid #e4e4e4;
        background-color: #ffffff;
        border-radius: 100px;
    }

    a.nav-link {
        display: block;
    }

    ul.navbar-nav {
        padding-left: 0;
    }

    a.nav-link {
        text-decoration: none;
    }

    li.nav-item {
        width: 32%;
        margin-right: 10px;
    }

    ul.navbar-nav {
        width: 100%;
    }

    .second-nav a.nav-link i.fa {
        padding-right: 8px;
        color: #eb191f;
        font-size: 19px;
    }

    .second-nav a.dropdown-item {
        width: 100%;
        display: flex;
    }

    section.content-header span {
        color: #eb191f !important;
        font-weight: 700 !important;
    }

    .content-header > .breadcrumb {
        top: 80px;
    }

    .second-nav .dropdown-menu {
        padding: 0;
    }
</style>


